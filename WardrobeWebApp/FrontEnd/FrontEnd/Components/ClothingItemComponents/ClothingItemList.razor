<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 p-4">
    @foreach (var item in clothesList)
    {
        <ClothingItemFrame clothing="@item" DeleteClothingItem="DeleteClothingItem"></ClothingItemFrame>
    }
</div>

@code {

    [Parameter]
    public List<ClothingItem> clothesList { get; set; }

    [Parameter]
    public EventCallback<int> DeleteClothingItem { get; set; }

}
