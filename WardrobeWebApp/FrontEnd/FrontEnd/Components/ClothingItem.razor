<div class="flex flex-col items-center item-container">

    <div class="max-w-sm w-full bg-amber-700 border border-gray-200 rounded-lg shadow-sm dark:bg-grey-800 dark:border-grey-700">

        <div class="relative group w-full">
            <figure class="w-full">
                <img class="rounded-lg w-full" src="https://images.unsplash.com/photo-1619622337420-72cf77fac199?q=80&w=2126&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" />
            </figure>

            <button @onclick="ToggleVisibility" class="absolute bottom-4 left-1/2 transform -translate-x-1/2 bg-black/50 text-white px-4 py-2 rounded-lg opacity-0 group-hover:opacity-100 w-full">
                Click Me
            </button>
        </div>

    </div>


    @if (!isHidden)
    {
        <div class="w-full max-w-sm pt-4 bg-gray-200">
            <h1 class="text-xl font-bold text-center">Title</h1>
            <div class="w-full">
                <ul class="w-full space-y-2">
                    <li class="bg-gray-200 p-2 rounded-lg w-full">Item 1</li>
                    <li class="bg-gray-200 p-2 rounded-lg w-full">Item 2</li>
                    <li class="bg-gray-200 p-2 rounded-lg w-full">Item 3</li>
                    <li class="bg-gray-200 p-2 rounded-lg w-full">Item 4</li>
                    <li class="bg-gray-200 p-2 rounded-lg w-full">Item 5</li>
                </ul>
            </div>
        </div>
    }

</div>

<style>
    .item-container{
        width: 10rem;
        height: auto;
    }
</style>

@code {

    private bool isHidden { get; set; } = true;

    private async Task ToggleVisibility()
    {
        isHidden = !isHidden;
        StateHasChanged(); 
    }
}

